@using Newtonsoft.Json
@model ARMS.ViewModels.UnassignedCourseViewModel
@{
    ViewData["Title"] = "Manual";
    var i = 0;
}

<section class="page-table">
    <div class="col-md-12 col-lg-12">
        <div class="block block--underline">
            <div class="block__body text-left height-3">
                <div class="table-responsive">
                    <table id="table-unassigned-course" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="mn-w-40px w-40px"><img class="w-15px h-15px" src="~/assets/icon/sort.png" alt=""/></th>
                            <th class="mn-w-250px w-auto">Course</th>
                            <th class="mn-w-150px w-150px">Total Section</th>     
                            <th class="mn-w-150px w-150px">Total Student</th>
                            <th class="mn-w-200px w-200px">@Model.SessionText On</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in JsonConvert.DeserializeObject<List<UnassignedCourse>>(Model.UnassignedCourses))
                        {
                            i++;
                            <tr>
                                <td>@i.ToString()</td>
                                <td class="text-ellipsis mn-w-250px w-auto">@item.Text</td>
                                <td>@item.TotalSection</td>
                                <td>@item.TotalStudent</td>
                                <td>@item.ExaminationSlot.ExaminationDateTime</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
        
        const handleTable = $('#table-unassigned-course');
        handleTable.DataTable({
        "columnDefs": [{
            "targets": "no-sort",
            "orderable": false
            }]
        });
    }); 
</script>