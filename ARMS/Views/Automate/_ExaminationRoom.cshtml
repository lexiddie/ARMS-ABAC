@using Newtonsoft.Json
@model ARMS.ViewModels.ExaminationRoomViewModel
@{
    ViewData["Title"] = "Automate";
    var i = 0;
    var totalSeat = 0;
    var totalSection = 0;
    var totalStudent = 0;
}

<div class="page-selection">
    <div>    
        <img class="m-x-15" src="@Url.Content("~/assets/icon/clock.png")" alt=""/>
        <label class="m-l-10 m-t-5" id="display-time"></label>
    </div>    
    <div>
        <label></label>
    </div>
</div>

<div class="page-breadcrumb">
    <div class="unselected">
        <button id="button-assigned-course" type="submit">
            <span>Assigned Course</span>
        </button>
    </div>
    <div>
        <button class="active" id="button-current" type="submit">
            <span>@Model.CourseCodeName</span>
        </button>
    </div>
</div>

<section class="page-table">
    <div class="col-md-12 col-lg-12">
        <div class="block block--underline">
            <div class="block__body text-left height-3">
                <div class="table-responsive">
                    <table id="table-examination-room" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="mn-w-40px w-40px"><img class="w-15px h-15px" src="~/assets/icon/sort.png" alt=""/></th>
                            <th class="mn-w-150px w-auto">Room</th>
                            <th class="mn-w-150px w-auto">Total Seat</th>
                            <th class="mn-w-150px w-auto">Total Section</th>
                            <th class="mn-w-150px w-auto">Total Student</th>
                            <th class="mn-w-80px w-80px no-sort">Action</th>
                            <th class="mn-w-100px w-100px">Created On</th>
                            <th class="mn-w-90px w-90px">Created By</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in JsonConvert.DeserializeObject<List<ExaminationRoom>>(Model.ExaminationRooms))
                        {
                            i++;
                            totalSeat += item.TotalSeat;
                            totalSection += item.TotalSection;
                            totalStudent += item.TotalStudent;
                            <tr>
                                <td>@i.ToString()</td>
                                <td>@item.Name</td>
                                <td>@item.TotalSeat</td>
                                <td>@item.TotalSection</td>
                                <td>@item.TotalStudent</td>
                                <td class="display-flex">
                                    <a asp-controller="Automate" asp-action="ExaminationStudent" asp-route-examinationSlotId="@Model.ExaminationSlotId" asp-route-courseId="@Model.CourseId" asp-route-courseCodeName="@Model.CourseCodeName" asp-route-roomId="@item.Id" asp-route-roomName="@item.Name" class="btn-image btn-image-info w-23 h-23"><img class="w-15px h-15px" src="@Url.Content("~/assets/icon/info.png")" alt=""/></a>  
                                </td>
                                <td>
                                    @{
                                        var dateTime = $"{item.CreatedDate} {item.CreatedTime}";
                                        <span>@dateTime</span>
                                    }
                                </td>
                                <td>@item.CreatedBy</td>
                            </tr>
                        }
                        @{
                            Console.WriteLine($"TotalSeat {totalSeat} TotalSection {totalSection} TotalStudent {totalStudent}");
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
        
        $.ajax({
            type: 'GET',
            url: `@Url.Action("CurrentDateTime", "Home")`,
            cache: true,
            dataType: 'json'
        }).done(function(res) {
            $('#display-time').text(`Updated At ${res['dateTime']}`)
        }).fail(function(a, b, c) {
            console.log('It is error');
            console.log(c);
        });

        const reload = $('div[id$=main-reloading]');
        const automatePartial = $('#automate-partial');
        const btnAssignedCourse = $('#button-assigned-course');
        const btnCurrent = $('#button-current');
        const semesterSelected = $('select[id$=semester]').val();
        const sessionSelected = $('select[id$=session]').val();
        const handleTable = $('#table-examination-room');
        handleTable.DataTable({
        "columnDefs": [{
            "targets": "no-sort",
            "orderable": false
            }]
        });
        handleTable.on('click', '.btn-image', function(event) {
            reload.show();
            event.preventDefault();
            const url = $(this).attr("href");
            $.post(url).done(function(result) {
                automatePartial.html(result); 
                reload.hide();
            });
        }); 
        
        btnAssignedCourse.click(function() {
            reload.show();
            const sessionText = $('select[id$=session] option:selected').text();
            $.ajax({
                type: 'POST',
                url: `@Url.Action("AssignedCourse", "Automate")?semesterId=${semesterSelected}&examinationTypeId=${sessionSelected}&sessionText=${sessionText}`,
                cache: true
            }).done(function(res) {
                automatePartial.empty().append(res);
                reload.hide();
            }).fail(function(a, b, c) {
                console.log('It is error');
                console.log(c);
            }); 
        });
        
        btnCurrent.click(function() {
            reload.show();
            $.ajax({
                type: 'POST',
                url: `@Url.Action("ExaminationRoom", "Automate")?semesterId=${semesterSelected}&examinationTypeId=${sessionSelected}&examinationSlotId=@Model.ExaminationSlotId&courseId=@Model.CourseId&courseCodeName=@Model.CourseCodeName`,
                cache: true
            }).done(function(res) {
                automatePartial.empty().append(res);
                reload.hide();
            }).fail(function(a, b, c) {
                console.log('It is error');
                console.log(c);
            });         
        });
    });
</script>