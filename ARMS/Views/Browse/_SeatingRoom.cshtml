@using Newtonsoft.Json
@model ARMS.ViewModels.SeatingRoomViewModel
@{
    ViewData["Title"] = "Browse";
    var i = 0;
}

<div class="page-selection">
    <div>    
        <img class="m-x-15" src="@Url.Content("~/assets/icon/clock.png")" alt=""/>
        <label class="m-l-10 m-t-5" id="display-time"></label>
    </div>    
    <div>
        <label></label>
    </div>
</div>


<section class="page-table">
    <div class="col-md-12 col-lg-12">
        <div class="block block--underline">
            <div class="block__body text-left height-3">
                <div class="table-responsive">
                    <table id="table-seating-room" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="mn-w-40px w-40px"><img class="w-15px h-15px" src="~/assets/icon/sort.png" alt=""/></th>
                            <th class="mn-w-150px w-auto">Campus</th> 
                            <th class="mn-w-100px w-auto">Building</th>
                            <th class="mn-w-100px w-auto">Room</th>
                            <th class="mn-w-250px w-250px">Examination On</th>
                            <th class="mn-w-200px w-200px">Total Student</th>
                            <th class="mn-w-80px w-80px no-sort">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in JsonConvert.DeserializeObject<List<SeatingRoom>>(Model.SeatingRooms))
                        {
                            i++;
                            <tr>
                                <td>@i.ToString()</td>
                                <td>@item.CampusName</td>
                                <td>@item.BuildingName</td>  
                                <td>@item.Name</td>
                                <td>@item.ExaminationDateTime</td>
                                <td>@item.TotalStudent</td>
                                <td class="display-flex">
                                    @* <a asp-controller="Browse" asp-action="PreviewExaminationRoom" class="btn-image btn-image-primary w-23 h-23"><img class="w-15px h-15px" src="@Url.Content("~/assets/icon/preview.png")" alt=""/></a> *@
                                    <a class="btn-image btn-image-primary w-23 h-23"><img class="w-15px h-15px" src="@Url.Content("~/assets/icon/preview.png")" alt=""/></a>
                                    <a class="btn-image btn-image-info w-23 h-23"><img class="w-15px h-15px" src="@Url.Content("~/assets/icon/info.png")" alt=""/></a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
        
        $.ajax({
            type: 'GET',
            url: `@Url.Action("CurrentDateTime", "Home")`,
            cache: true,
            dataType: 'json'
        }).done(function(res) {
            $('#display-time').text(`Updated At ${res['dateTime']}`)
        }).fail(function(a, b, c) {
            console.log('It is error');
            console.log(c);
        });
        
        const reload = $('div[id$=main-reloading]');
        const browsePartial = $('#browse-partial');
        const semesterSelected = $('select[id$=semester]').val();
        const semesterText = $('select[id$=semester] option:selected').text();
        const sessionText = $('select[id$=session] option:selected').text();
        const handleTable = $('#table-seating-room').DataTable({
        "columnDefs": [{
            "targets": "no-sort",
            "orderable": false
            }]
        });
        handleTable.on('click', '.btn-image-primary', function(event) {
            // event.preventDefault();
            // const url = $(this).attr("href");
            reload.show();
            const rowIndex = handleTable.row( $(this).parents('tr') ).index();
            const model = { semesterId: semesterSelected, semesterText: semesterText, sessionText: sessionText, seatingRoom: JSON.stringify(JSON.parse(@Json.Serialize(Model.SeatingRooms))[rowIndex])}
            $.ajax({
                type: 'POST',
                url: '@Url.Action("PreviewReport", "Browse")',
                data: model,
                cache: false
            }).done(function(res) {
                browsePartial.empty().append(res);
                reload.hide();
            }).fail(function(a, b, c) {
                console.log('It is error');
                console.log(c);
                loadErrorPage();
            });
        }).on('click', '.btn-image-info', function(event) {
            reload.show();
            const rowIndex = handleTable.row( $(this).parents('tr') ).index();
            const model = { semesterId: semesterSelected, semesterText: semesterText, sessionText: sessionText, seatingRoom: JSON.stringify(JSON.parse(@Json.Serialize(Model.SeatingRooms))[rowIndex])}
            $.ajax({
                type: 'POST',
                url: '@Url.Action("SeatingStudent", "Browse")',
                data: model,
                cache: false
            }).done(function(res) {
                browsePartial.empty().append(res);
                reload.hide();
            }).fail(function(a, b, c) {
                console.log('It is error');
                console.log(c);
                loadErrorPage();
            });
        });

        function loadErrorPage() {
            const url = '@Url.Action("ErrorPage", "Home")';
            $.ajax({
                type: 'GET',
                url: url,
                cache: true
            }).done(function(res) {
                browsePartial.empty().append(res);
                reload.hide();
            });
        }
    });
</script>
