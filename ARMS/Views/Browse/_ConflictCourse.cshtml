@using Newtonsoft.Json
@model ARMS.ViewModels.ConflictCourseViewModel
@{
    ViewData["Title"] = "Browse";
    var i = 0;
}

<div class="page-selection">
    <div>    
        <img class="m-x-15" src="@Url.Content("~/assets/icon/clock.png")" alt=""/>
        <label class="m-l-10 m-t-5" id="display-time"></label>
    </div>    
    <div>
        <label></label>
    </div>
</div>

<div class="page-breadcrumb">
    <div class="unselected">
        <button id="button-conflict-student" type="submit">
            <span>Conflict Student</span>
        </button>
    </div>
    <div>
        <button class="active" id="button-current" type="submit">
            <span>@Model.StudentName</span>
        </button>
    </div>
</div>

<div class="page-detail">    
    <div>
        <label class="m-l-15">Student Name: <span>@Model.StudentName</span>, and Student Code: <span>@Model.StudentCode</span>. Conflict On <span>@Model.ExaminationDateTime</span></label>
    </div>
</div>

<section class="page-table">
    <div class="col-md-12 col-lg-12">
        <div class="block block--underline">
            <div class="block__body text-left height-3">
                <div class="table-responsive">
                    <table id="table-conflict-course" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="mn-w-40px w-40px"><img class="w-15px h-15px" src="~/assets/icon/sort.png" alt=""/></th>
                            <th class="mn-w-100px w-100px">Faculty</th>    
                            <th class="mn-w-100px w-100px">Department</th>
                            <th class="mn-w-250px w-auto">Course</th>
                        </tr>
                        </thead>
                        <tbody>
                    @foreach (var item in JsonConvert.DeserializeObject<List<ConflictCourse>>(Model.ConflictCourses))
                        {
                            i++;
                            <tr>
                                <td>@i.ToString()</td>
                                <td>@item.FacultyName</td>
                                <td>@item.DepartmentName</td>
                                <td>@item.CodeAndName</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
        
        $.ajax({
            type: 'GET',
            url: `@Url.Action("CurrentDateTime", "Home")`,
            cache: true,
            dataType: 'json'
        }).done(function(res) {
            $('#display-time').text(`Updated At ${res['dateTime']}`)
        }).fail(function(a, b, c) {
            console.log('It is error');
            console.log(c);
        });

        const reload = $('div[id$=main-reloading]');
        const browsePartial = $('#browse-partial');
        const btnConflictStudent = $('#button-conflict-student');
        const btnCurrent = $('#button-current');
        const semesterSelected = $('select[id$=semester]').val();
        const sessionSelected = $('select[id$=session]').val();
        const sessionText = $('select[id$=session] option:selected').text();
        const handleTable = $('#table-conflict-course');
        handleTable.DataTable({
        "columnDefs": [{
            "targets": "no-sort",
            "orderable": false
            }]
        });
        handleTable.on('click', '.btn-image', function(event) {
            reload.show();
            event.preventDefault();
            const url = $(this).attr("href");
            $.post(url).done(function(result) {
                browsePartial.html(result); 
                reload.hide();
            });
        }); 
        
        btnConflictStudent.click(function() {
            reload.show();
            $.ajax({
                type: 'POST',
                url: `@Url.Action("ConflictStudent", "Browse")?semesterId=${semesterSelected}&examinationTypeId=${sessionSelected}&sessionText=${sessionText}`,
                cache: true
            }).done(function(res) {
                browsePartial.empty().append(res);
                reload.hide();
            }).fail(function(a, b, c) {
                console.log('It is error');
                console.log(c);
            });
        });
        
        btnCurrent.click(function() {
            reload.show();
            $.ajax({
                type: 'POST',
                url: `@Url.Action("ConflictCourse", "Browse")?studentCode=@Model.StudentCode&studentName=@Model.StudentName&examinationDateTime=@Model.ExaminationDateTime&courseIds=@JsonConvert.SerializeObject(Model.CourseIds)`,
                cache: true
            }).done(function(res) {
                browsePartial.empty().append(res);
                reload.hide();
            }).fail(function(a, b, c) {
                console.log('It is error');
                console.log(c);
            });         
        });
    });
</script>