@using Newtonsoft.Json
@model ARMS.ViewModels.SemesterViewModel
@{
    ViewData["Title"] = "Semester";
    var i = 0;
}

<div class="page-content">
    <div>  
        <div class="page-selection">
            <div>    
                <img class="m-x-15" src="@Url.Content("~/assets/icon/semester.png")" alt=""/>
                <label class="m-l-10 m-t-5">Semester</label>
            </div>    
            <div>    
                <label></label>
            </div>
        </div>
        
        <div class="page-selection">
            <div>    
                <img class="m-x-15" src="@Url.Content("~/assets/icon/clock.png")" alt=""/>
                <label class="m-l-10 m-t-5" id="display-time"></label>
            </div>    
            <div>
                <label></label>
            </div>
        </div>
        
        <section class="page-table">
            <div class="col-md-12 col-lg-12">
                <div class="block block--underline">
                    <div class="block__body text-left height-3">
                        <div class="table-responsive">
                            <table id="table-semester" class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th class="mn-w-40px w-40px"><img class="w-15px h-15px" src="~/assets/icon/sort.png" alt=""/></th>
                                    <th class="mn-w-130px w-130px">Academic Year</th>
                                    <th class="mn-w-50px w-50px">Term</th>  
                                    <th class="mn-w-150px w-auto">Semester Period</th>
                                    <th class="mn-w-150px w-auto">Midterm Period</th>
                                    <th class="mn-w-150px w-auto">Final Period</th>
                                    <th class="mn-w-100px w-100px no-sort">Total Week</th>
                                    <th class="mn-w-80px w-80px no-sort">Status</th>  
                                    <th class="mn-w-100px w-100px">Created On</th>
                                    <th class="mn-w-90px w-90px">Created By</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in JsonConvert.DeserializeObject<List<Semester>>(Model.Semesters))
                                {
                                    i++;
                                    <tr>
                                        <td>@i.ToString()</td>
                                        <td>@item.AcademicYear</td>
                                        <td>@item.Term</td>
                                        <td>@{
                                                var termPeriod = "No Period";
                                                if (item.StartDate != null && item.EndDate != null)
                                                {
                                                    termPeriod = $"{item.StartDate} - {item.EndDate}";
                                                }
                                                <span>@termPeriod</span>    
                                            }
                                        </td>
                                        <td>@{
                                                var midtermPeriod = "No Period";
                                                if (item.MidtermStartDate != null && item.MidtermEndDate != null)
                                                {
                                                    midtermPeriod = $"{item.MidtermStartDate} - {item.MidtermEndDate}";
                                                }
                                                <span>@midtermPeriod</span>    
                                            }
                                        </td>                                        
                                        <td>@{
                                                var finalPeriod = "No Period";
                                                if (item.FinalStartDate != null && item.FinalEndDate != null)
                                                {
                                                    finalPeriod = $"{item.FinalStartDate} - {item.FinalEndDate}";
                                                }
                                                <span>@finalPeriod</span>    
                                            }
                                        </td>
                                        <td>@item.TotalWeek</td>
                                        <td>
                                            @{
                                                var status = "Active";
                                                var statusClass = "bg-success";
                                                if (!item.IsActive) {
                                                    status = "Inactive";
                                                    statusClass = "bg-danger";
                                                }
                                                <span class="label-status  @statusClass">@status</span>
                                            }
                                        </td>
                                        <td>
                                            @{
                                                var dateTime = $"{item.CreatedDate} {item.CreatedTime}";
                                                <span>@dateTime</span>
                                            }
                                        </td>
                                        <td>@item.CreatedBy</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script>
    $(document).ready(function() {
       
        $.ajax({
            type: 'GET',
            url: `@Url.Action("CurrentDateTime", "Home")`,
            cache: true,
            dataType: 'json'
        }).done(function(res) {
            $('#display-time').text(`Updated At ${res['dateTime']}`)
        }).fail(function(a, b, c) {
           console.log('It is error');
           console.log(c);
        });
        
        const reload = $('div[id$=main-reloading]');
        reload.hide();
        const handleTable = $('#table-semester');
        handleTable.DataTable({
        "columnDefs": [{
            "targets": "no-sort",
            "orderable": false
            }]
        });
    });
</script>




